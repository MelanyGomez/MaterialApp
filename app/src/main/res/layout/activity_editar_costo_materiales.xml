<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:onClick="Registrar"
    tools:context=".editar_costo_materiales">

    <ImageView
        android:id="@+id/iv_editar_costo_materiales"
        android:layout_width="360dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ed_material" />

    <TextView
        android:id="@+id/tv_editar_costo_materiales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:text="MATERIALES"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombre_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:text="Nombre del material"
        android:textColor="@color/black1"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nombre_mat"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/format_field"
        android:gravity="center"
        android:hint="Ingrese el nombre del material"
        android:textColor="@color/black"
        android:textColorHint="@color/gray3"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_costo_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:text="Costo del material"
        android:textColor="@color/black1"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_costo_mat"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/format_field"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingrese el costo del material por metro cÃºbico"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/gray3"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_guardar_cm"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/yellow2"
        android:onClick="Registrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Guardar"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:cornerRadius="20dp"/>

    <!--<Button
        android:id="@+id/b_guardar_cm"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/yellow2"
        android:onClick="Registrar"
        android:text="Guardar"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
</androidx.constraintlayout.widget.ConstraintLayout>